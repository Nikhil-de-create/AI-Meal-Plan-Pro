# AI Meal Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/mealplan_db

# Authentication (Required)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# AI Integration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google OAuth (Optional - for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Application Settings
NODE_ENV=production
PORT=5000

# Development Settings (Optional)
# USE_MOCK_AI=true  # Use mock data instead of OpenAI API for testing

# Production Settings
# CORS_ORIGIN=https://yourdomain.com  # Set your frontend domain for CORS